<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
    <Appenders>
        <Console name="out" target="SYSTEM_OUT">
            <PatternLayout charset="UTF-8"
                pattern="%d{HH:mm:ss.SSS} %-5level [%-20logger] : %m%n" />
        </Console>
    </Appenders>
    <Loggers>
        <!-- org.springframework 패키지와 그 하위의 모든 패키지에서 Log4j 기능 사용 -->
        <Logger name="org.springframework" level="info"
            additivity="false">
            <AppenderRef ref="out" />
        </Logger>
        <!-- 매퍼 인터페이스가 있는 패키지에서는 trace 레벨 이상의 로그들을 출력 -->
        <Logger name="com.example.spring02.mapper" level="trace"
            additivity="false">
            <AppenderRef ref="out" />
        </Logger>

        <!-- com.example 패키지와 그 하위 패키지에서는 info 레벨 이상의 로그들만 출력 -->
        <Logger name="com.example" level="info" additivity="false">
            <AppenderRef ref="out" />
        </Logger>

        <Root level="info" additivity="false">
            <AppenderRef ref="out" />
        </Root>
    </Loggers>
</Configuration>